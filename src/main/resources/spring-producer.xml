<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="orderMessageQueueSelector" class="org.study.mq.rocketmq.order.OrderMessageQueueSelector"/>
    <bean id="producer" class="org.study.mq.rocketmq.order.OrderProducer" init-method="init" destroy-method="destory">
        <constructor-arg name="nameServerAddr" value="localhost:9876"/>
        <constructor-arg name="producerGroupName" value="t_producer_group"/>
    </bean>

</beans>